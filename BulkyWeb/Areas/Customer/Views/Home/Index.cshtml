        function diagnosePlant() {
            const symptom = document.getElementById('symptom').value;
            const condition = document.getElementById('condition').value;
            const environment = document.getElementById('environment').value;
            const diagnosisResult = document.getElementById('diagnostic-result');

            let diagnosis = '';
            let treatment = '';

            if (symptom === 'yellow-leaves' && condition === 'dry' && environment === 'sunny') {
                diagnosis = 'Nitrogen Deficiency';
                treatment = 'Add a balanced fertilizer that includes nitrogen.';
            } else if (symptom === 'wilting' && condition === 'wet' && environment === 'shady') {
                diagnosis = 'Overwatering or Root Rot';
                treatment = 'Reduce watering and improve soil drainage.';
            } else if (symptom === 'spots' && condition === 'normal' && environment === 'humid') {
                diagnosis = 'Fungal Infection';
                treatment = 'Use a fungicide and remove affected leaves. Ensure proper air circulation and avoid overhead watering.';
            } else if (symptom === 'insects' && condition === 'sticky' && environment === 'dry-air') {
                diagnosis = 'Aphid Infestation';
                treatment = 'Use an insecticidal soap or neem oil to treat the plant. Encourage beneficial insects like ladybugs.';
            } else if (symptom === 'stunted-growth' && condition === 'normal' && environment === 'sunny') {
                diagnosis = 'Phosphorus Deficiency';
                treatment = 'Apply a phosphorus-rich fertilizer. Bone meal is a good organic source of phosphorus.';
            } else if (symptom === 'discoloration' && condition === 'normal' && environment === 'windy') {
                diagnosis = 'Iron Deficiency';
                treatment = 'Add iron supplements to the soil. Ensure the soil pH is not too high as it can inhibit iron absorption.';
            } else if (symptom === 'yellow-leaves' && condition === 'wet' && environment === 'humid') {
                diagnosis = 'Overwatering or Poor Drainage';
                treatment = 'Allow the soil to dry out before watering again. Ensure proper drainage and consider repotting if necessary.';
            } else {
                diagnosis = 'Unknown Issue';
                treatment = 'Please provide more specific symptoms or consult a gardening expert.';
            }

            diagnosisResult.innerHTML = `
                                <h5>Diagnosis: ${diagnosis}</h5>
                                <p>Treatment: ${treatment}</p>
                            `;
        }

